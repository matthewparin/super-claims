#!/bin/bash

source /var/vcap/jobs/hbase-standalone/bin/variables.sh

export HBASE_PID_DIR=$HBASE_PID_DIR
export HBASE_LOG_DIR=$HBASE_LOG_DIR
export JAVA_HOME=$JAVA_HOME

case $1 in

  start)
    /var/vcap/packages/hbase/hbase-1.2.6/bin/start-hbase.sh
    ;;

  stop)
    /var/vcap/packages/hbase/hbase-1.2.6/bin/stop-hbase.sh
    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac

